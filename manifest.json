{
    "name": "__MSG_name__",
    "version": "1.0.0",

    "commands": {
        "visible_screenshot": {
            "description": "visible screenshot"
        },
        "entire_page_screenshot": {
            "description": "Entire Page Screenshot"
        }
    },


    "homepage_url": "https://github.com/sergei97k/1click-screenshot/",
    "manifest_version": 2,
    "description": "__MSG_description__",
    "icons": {
        "48": "images/photo-camera-32.png",
        "128": "images/photo-camera-128.png"
    },
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "images/photo-camera-128.png",
        "default_title": "Screenshot Extension",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "/images/*.png",

        "/css/pagestyles.css",
        "/css/dialog.css",

        "/libs/gapi.js",
        "/libs/jquery.js",
        "/js/dialog.js"
    ],
    "offline_enabled":true,
    "default_locale": "en",
    "permissions": ["activeTab"],
    "optional_permissions": ["desktopCapture" ]
}
